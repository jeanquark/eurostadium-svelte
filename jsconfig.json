{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			// name and path to aliases
      		"@src/*": ["src/*"],
      		"@styles": ["src/styles"],
	  		"@lib": ["src/lib"],
	  		"@utils": ["src/lib/utils"],
			"@components": ["src/lib/components"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}